{
  "testEnvironment": "jsdom",
  "testMatch": ["<rootDir>/src/tests/*.test.ts"],
  "transform": {
    "^.+\\.(ts|tsx|js|jsx)$": [
      "ts-jest",
      {
        "isolatedModules": true
      }
    ]
  },
  "injectGlobals": false,
  "moduleNameMapper": {
    "\\.(gif|ttf|eot|svg|png)$": "<rootDir>/src/tests/__mocks__/fileMock.tsx"
  }
}
